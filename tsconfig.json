{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"isolatedModules": false
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/jest/setupTests.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx"
	]
}
